template(name="groups")
  +create_group
  +joingroup

template(name="create_group")
  h2 Create a group
  form(id="form_create_group")
    fieldset
      label(for="input_group_name") Your Group Name:
      input(id="input_group_name", placeholder="Your Group Name", type="text") 
    fieldset
      label(for="input_group_password") Create a Group Password:
      input(id="input_group_password", placeholder="Password", type="text")
    fieldset
      input(id="input_join_until", type="date", value="{{default_join_until}}")
    fieldset
      input(id="input_ending", type="date", value="{{default_ending}}")
    input(type="submit" value="Create Group")